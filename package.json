{
  "name": "adios-blog-template",
  "version": "0.0.1",
  "description": "template of adios-blog-site, using 'adios-blog-cli' as cli to compile and preview.",
  "main": "index.js",
  "scripts": {
    "build": "node ./scripts/build.js",
    "clean": "node ./scripts/clean.js",
    "dev": "node ./scripts/dev.js",
    "build:clean": "yarn clean && yarn build",
    "build:watch": "chokidar \"theme/**/*\" \"source/**/*\" -c \"yarn build:clean\"",
    "dev:watch": "concurrently \"yarn build:watch\" \"yarn dev\""
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "adios-blog-cli": "^0.0.3",
    "chokidar-cli": "^3.0.0",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^18.0.3",
    "concurrently": "^7.2.2"
  }
}
